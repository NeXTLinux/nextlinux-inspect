<div class="wsd-metric-tile__header">
    <div class="wsd-metric-tile__name">
        {{data.name}}
    </div>
</div>

<div class="wsd-metric-tile__content">
    <div class="wsd-metric-tile__value">
        <span class="wsd-metric-tile__value-number">
            {{number-to-string data.totalValue decimalCount=1 isMultiplierOmitted=true}}
        </span>
        <span class="wsd-metric-tile__value-multiplier">
            {{number-to-string data.totalValue decimalCount=1 isValueOmitted=true}}
        </span>
    </div>
    <div class="wsd-metric-tile__action">
        {{sd-button
            iconName="drill_down"
            classNames="sd-button--fab sd-button--highlight-on-hover"
            title="Drill down"
            click=(action drillDown)
        }}
    </div>
</div>

<div class="wsd-metric-tile__footer">
    {{sd-time-series
        height=timeSeriesHeight
        width=timeSeriesWidth
        timestampProp="t"

        valueProp="v"
        data=data.timeSeries
        color=timeSeriesColor
    }}
</div>

<div class="wsd-metric-tile__overlay" style={{overlayStyle}}>
</div>
