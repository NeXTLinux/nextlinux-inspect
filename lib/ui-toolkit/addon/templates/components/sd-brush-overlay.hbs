<rect class="overlay" fill="none" pointer-events="all" cursor="crosshair" x="0" y="0" width="{{width}}" height="{{height}}"></rect>

{{#if hasSelection}}
    <rect class="left-selection" pointer-events="none" fill="#777777" fill-opacity="0.3" shape-rendering="crispEdges" x="0" y="0" width="{{selectionFromPosition}}" height="{{height}}"></rect>

    <rect class="selection" fill="none" pointer-events="none" x="{{selectionFromPosition}}" y="0" width="{{selectionWidth}}" height="{{height}}"></rect>

    <rect class="right-selection" pointer-events="none" fill="#777777" fill-opacity="0.3" shape-rendering="crispEdges" x="{{selectionToPosition}}" y="0" width="{{width}}" height="{{height}}"></rect>
{{/if}}
